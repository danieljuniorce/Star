{
    "name": "starsolution/framework",
    "description": "Framework simples para aplicação web.",
    "license": "MIT",
    "version": "2.0",
    "type": "library",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Daniel Souza",
            "email": "danieljuniorce@hotmail.com"
        }
    ],
    "require": {
        "illuminate/database": "^5.8",
        "vlucas/phpdotenv": "^3.3",
        "symfony/console": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Star\\": "star/",
            "Star\\Core\\": "star/Core/",
            "Star\\Component\\": "star/Component/",
            "Star\\Command\\": "star/StarCli/command/", 
            "Database\\": "database/",
            "Controllers\\": "app/Controllers/",
            "Models\\": "app/Models/",
            "Security\\": "app/Security/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts":{
        "post-install-cmd": "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4"
    }
}
